<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="500.0" prefWidth="400.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.albalatro.controller.DetalleController">

    <top>
        <HBox alignment="CENTER" spacing="15.0" styleClass="toolbar-light">
            <Button onAction="#diaAnterior" styleClass="button, button-ghost" text="◀" />
            <Label fx:id="lblFechaActual" style="-fx-text-fill: #2C3E50;" styleClass="label-subheader" text="DOMINGO 12 OCT" />
            <Button onAction="#diaSiguiente" styleClass="button, button-ghost" text="▶" />
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <VBox spacing="10.0">
                <padding><Insets bottom="20" left="20" right="20" top="20" /></padding>
                
                <Label style="-fx-font-size: 14px;" styleClass="label-subheader" text="Periodos Trabajados" />
                
                <VBox fx:id="containerPeriodos" spacing="10.0" />

                <Button maxWidth="Infinity" onAction="#agregarNuevoPeriodo" styleClass="button, button-secondary" text="+ Agregar Entrada/Salida" />

                <VBox spacing="5.0" style="-fx-padding: 15 0 0 0;">
                    <Label styleClass="label-subheader" text="Salario para este día:" />
                    <HBox alignment="CENTER_LEFT" spacing="10.0">
                        <ComboBox fx:id="comboSalarioDiario" maxWidth="Infinity" prefHeight="40.0" promptText="Seleccione salario..." styleClass="combo-box" HBox.hgrow="ALWAYS" />
                        
                        <Button onAction="#abrirCrearSalarioModal" prefHeight="40.0" prefWidth="50.0" style="-fx-font-weight: bold; -fx-font-size: 18px;" styleClass="button, button-secondary" text="+" />
                    </HBox>
                    <Label style="-fx-font-size: 10px;" text="* Cambiar esto solo afecta al cálculo de este día." textFill="#888888" />
                </VBox>
            <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#abrirNotas" text="Agregar notas" />

            </VBox>
        </ScrollPane>
    </center>

    <bottom>
        <VBox spacing="10.0" styleClass="toolbar-footer">
            <HBox alignment="CENTER_RIGHT" spacing="20.0">
                <Label style="-fx-font-weight: bold;" text="Total del Día:" />
                <Label fx:id="lblTotalDinero" style="-fx-font-size: 18px;" styleClass="label-money" text="\$0.00" />
            </HBox>
            
            <Button maxWidth="Infinity" onAction="#guardarCambios" prefHeight="40.0" styleClass="button, button-primary" text="GUARDAR CAMBIOS" />
        </VBox>
    </bottom>

</BorderPane>
