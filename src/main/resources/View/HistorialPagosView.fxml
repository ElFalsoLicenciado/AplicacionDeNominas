<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox prefHeight="400.0" prefWidth="500.0" spacing="15.0" style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.albalatro.controller.HistorialPagosController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label styleClass="label-header" text="Historial de Pagos (Cortes)" />
    <Label text="Aquí puedes ver y eliminar cortes pasados. Al eliminar el último corte, podrás volver a generarlo con fechas distintas." textFill="#777777" wrapText="true" />

    <TableView fx:id="tablaCortes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colInicio" prefWidth="130.0" text="Fecha Inicio" />
            <TableColumn fx:id="colFin" prefWidth="130.0" text="Fecha Fin (Corte)" />
            <TableColumn fx:id="colMonto" prefWidth="100.0" text="Monto" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <HBox alignment="CENTER_RIGHT" spacing="10.0">
        <Button onAction="#cerrar" prefHeight="35.0" styleClass="button, button-secondary" text="Cerrar" />
        <Button onAction="#eliminarUltimoCorte" prefHeight="35.0" styleClass="button, button-danger" text="Eliminar Último Corte (Deshacer)" />
    </HBox>
</VBox>