<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefWidth="375.0" spacing="20.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.albalatro.controller.CrearEmpleadoController">

    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <Label text="Registrar Nuevo Empleado" textFill="#333333">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
        <VBox.margin>
            <Insets bottom="10.0" />
        </VBox.margin>
    </Label>

    <VBox maxWidth="400.0" spacing="5.0">
        <Label text="Nombre:" textFill="#666666">
            <font><Font name="System Bold" size="12.0" /></font>
        </Label>
        <TextField fx:id="txtNombre" prefHeight="40.0" promptText="Ej. Juan Pérez" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;" />
    </VBox>
   <VBox maxWidth="400.0" spacing="5.0">
      <children>
         <Label text="Apellido paterno:" textFill="#666666">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Label>
         <TextField fx:id="txtApellidoP" prefHeight="40.0" promptText="Ej. Juan Pérez" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;" />
      </children>
   </VBox>
   <VBox maxWidth="400.0" spacing="5.0">
      <children>
         <Label text="Apellido materno:" textFill="#666666">
            <font>
               <Font name="System Bold" size="12.0" />
            </font>
         </Label>
         <TextField fx:id="txtApellidoM" prefHeight="40.0" promptText="Ej. Juan Pérez" style="-fx-background-radius: 5; -fx-border-radius: 5; -fx-border-color: #cccccc;" />
      </children>
   </VBox>

    <Label fx:id="lblError" text="" textFill="RED" visible="false" />

    <HBox alignment="CENTER" maxWidth="400.0" spacing="15.0">
        <VBox.margin>
            <Insets top="10.0" />
        </VBox.margin>
        
        <Button onAction="#cancelar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #E0E0E0; -fx-text-fill: #333; -fx-cursor: hand; -fx-font-weight: bold;" text="Cancelar" />
                
        <Button fx:id="btnGuardar" onAction="#guardar" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-cursor: hand; -fx-font-weight: bold;" text="Guardar Empleado" />
    </HBox>

</VBox>
